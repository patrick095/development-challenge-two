{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": ["ES6"],
      "allowJs": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "removeComments": true,
      "baseUrl": ".",
      "paths": {
        "@controllers/*": ["./src/controllers"],
        "@models/*": ["./src/models"],
        "@config/*": ["./src/config"]
      },
      "typeRoots": [
        "./node_modules/@types"
      ],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true
    },
    "exclude": ["./jest.config.ts"]
  }